{
    "$schema":  "https://schema.tauri.app/config/2",
    "productName":  "Яндекс Музыка",
    "version":  "0.1.0",
    "identifier":  "com.pc.yandex-music-client",
    "build":  {
                  "beforeDevCommand":  "npm run dev",
                  "devUrl":  "https://music.yandex.ru",
                  "beforeBuildCommand":  "npm run build",
                  "frontendDist":  "../dist"
              },
    "app":  {
                "withGlobalTauri":  true,
                "windows":  [
                                {
                                    "label":  "main",
                                    "title":  "Яндекс Музыка",
                                    "width":  1200,
                                    "height":  800,
                                    "center":  true,
                                    "resizable":  true,
                                    "fullscreen":  false,
                                    "alwaysOnTop":  false,
                                    "decorations":  true,
                                    "skipTaskbar":  false,
                                    "focus":  true,
                                    "visible":  true,
                                    "minWidth":  768,
                                    "minHeight":  629
                                }
                            ],
                "security":  {
                                 "csp":  "default-src 'self' https://music.yandex.ru; img-src 'self' data: https: blob:; style-src 'self' 'unsafe-inline' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; connect-src 'self' https://music.yandex.ru https://*.yandex.ru https://*.yandex.net; font-src 'self' data: https:; object-src 'none'; base-uri 'self';"
                             }
            },
    "bundle":  {
                   "active":  true,
                   "targets":  [
                                   "app",
                                   "nsis"
                               ],
                   "icon":  [
                                "icons/32x32.png",
                                "icons/128x128.png",
                                "icons/128x128@2x.png",
                                "icons/icon.icns",
                                "icons/icon.ico",
                                "icons/icon.png"
                            ],
                   "resources":  [
                                     "icons/*"
                                 ]
               },
    "plugins":  {
                    "shell":  {
                                  "open":  true
                              }
                }
}
